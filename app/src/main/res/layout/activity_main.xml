<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Btn_8"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickBtn_8"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/tv_display"
        tools:text="8" />

    <Button
        android:id="@+id/Btn_9"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickBtn_9"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Btn_8"
        app:layout_constraintTop_toBottomOf="@+id/tv_display"
        tools:text="9" />

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="391dp"
        android:layout_height="50"
        android:layout_marginTop="16dp"
        android:textAlignment="viewEnd"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickBtn_7"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_display"
        tools:text="7" />

    <Button
        android:id="@+id/Btn_4"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickBtn_4"
        android:text="4"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/Btn_5"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickBtn_5"
        android:text="5"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Btn_4"
        app:layout_constraintTop_toBottomOf="@+id/Btn_8" />

    <Button
        android:id="@+id/Btn_6"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickBtn_6"
        android:text="6"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Btn_5"
        app:layout_constraintTop_toBottomOf="@+id/Btn_9" />

    <Button
        android:id="@+id/Btn_1"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickBtn_1"
        android:text="1"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_4" />

    <Button
        android:id="@+id/Btn_2"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickBtn_2"
        android:text="2"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Btn_1"
        app:layout_constraintTop_toBottomOf="@+id/Btn_5" />

    <Button
        android:id="@+id/Btn_3"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickBtn_3"
        android:text="3"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Btn_2"
        app:layout_constraintTop_toBottomOf="@+id/Btn_6" />

    <Button
        android:id="@+id/Btn_0"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickBtn_0"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_1" />

    <Button
        android:id="@+id/Btn_igual"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickIgual"
        android:text="="
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Btn_0"
        app:layout_constraintTop_toBottomOf="@+id/Btn_3" />

    <Button
        android:id="@+id/Btn_adicao"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickAdicao"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Btn_igual"
        app:layout_constraintTop_toBottomOf="@+id/Btn_3" />

    <Button
        android:id="@+id/Btn_subtracao"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickSubtracao"
        android:text="-"
        android:textSize="35"
        app:layout_constraintStart_toEndOf="@+id/Btn_adicao"
        app:layout_constraintTop_toBottomOf="@+id/Btn_divisao"
        tools:text="-" />

    <Button
        android:id="@+id/Btn_multiplicacao"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickMultiplicacao"
        android:text="X"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Btn_6"
        app:layout_constraintTop_toBottomOf="@+id/Btn_limpa" />

    <Button
        android:id="@+id/Btn_divisao"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickDivisao"
        android:text="%"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Btn_3"
        app:layout_constraintTop_toBottomOf="@+id/Btn_multiplicacao" />

    <Button
        android:id="@+id/Btn_limpa"
        android:layout_width="70"
        android:layout_height="80"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:onClick="onClickLimpa"
        android:text="C"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Btn_9"
        app:layout_constraintTop_toBottomOf="@+id/tv_display" />

</androidx.constraintlayout.widget.ConstraintLayout>